package com.tutorialsNinja.implementation;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.ui.Select;
import org.testng.annotations.Test;

import com.tutorialsNinja.pageObjects.LoginPage;

public class LoginPageImplementation extends BaseClass {

    @Test
    public void login() {
        LoginPage lg = new LoginPage(driver);
        lg.ClickmyAccount(); // Ensure ClickmyAccount is called before interacting with the Select element

        // Assuming 'My Account' is a link, use By.linkText instead of By.xpath
        WebElement myAccountLink = driver.findElement(By.linkText("My Account"));

        // Assuming the dropdown is associated with the 'My Account' link
        Select se = new Select(myAccountLink);
        se.selectByIndex(1);

        lg.clickLoginBtn();
        lg.getEmailText("sandeep1a@gmail.com");
        lg.getPwdText("sandeep1a");
        lg.clickLogin();
    }
}
